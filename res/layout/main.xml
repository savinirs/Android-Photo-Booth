<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent">
	<com.mijoro.photofunhouse.GLLayer
		android:id="@+id/FunhouseLayer" android:layout_width="match_parent"
		android:layout_height="match_parent" />
	<RelativeLayout android:id="@+id/Toolbar"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_gravity="bottom">
		<ImageButton android:id="@+id/camera_button"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:src="@drawable/photo" android:background="@null" />
		<ImageButton android:id="@+id/last_pic_button"
			android:visibility="gone"
			android:background="@null" android:layout_width="70dp"
			android:layout_height="70dp" android:scaleType="fitXY"
			android:layout_alignParentRight="true" />
	</RelativeLayout>
</FrameLayout>
